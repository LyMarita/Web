<% @show_post.each do |post| %>
	
		<tr>
			<td><%= post.id %></td>
			<td><%= post.title %></td>
			<td><%= post.description %></td>
			<td><%= post.date %></td>
			<td><%= post.publish %></td>
			<td><img src="../../assets<%=post.image_file_name%>" width="100px"/></td>
			<td><%= link_to "show", post_path(post.id) %></td>
		</tr>
		
</div>
<% end %> 
